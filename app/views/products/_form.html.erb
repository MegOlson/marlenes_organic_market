<%= render 'layouts/errors', :object => @product %>

<%= form_for [@product] do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :cost %>
    <%= f.number_field :cost, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :country %>
    <%= f.text_field :country, class: "form-control"%>
  </div>
  <%= f.submit class: "btn" %>
<% end %>
